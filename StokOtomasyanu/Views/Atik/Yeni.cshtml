@model StokOtomasyanu.Atiklar


@{
    ViewBag.Title = "Yeni";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Atiklar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        <p class="text-danger"> @ViewBag.Yanlis</p>
        <div class="form-group">
            <p class="control-label col-md-2"><b>Ürün Adı</b></p>
            <div class="col-md-10">
                @Html.DropDownList("UrunId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UrunId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
